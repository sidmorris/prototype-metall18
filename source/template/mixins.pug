include bemto/lib/index.pug

mixin icon(name,mod)
	-var modificator = mod || ''
		svg(class="icon icon-" + name + ' ' + modificator)
			use(xlink:href="assets/img/sprite.svg#" + name)


			
mixin iconInline(name,mod)
	-var modificator = mod || ''
		svg(class="icon icon-" + name + ' ' + modificator)
			use(xlink:href="#" + name)

mixin toTop(link)
	a#toTop(href= link class="to-top")&attributes(attributes)
		+iconInline('chevron-up')
