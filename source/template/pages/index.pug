extends ../_template.pug

append variables
	-var title = 'Home page';
	-var pageClass = 'home';



block content
	header#header.header
		.uk-container
			//- navbar
			nav(class="uk-navbar-container uk-navbar-transparent uk-navbar" uk-navbar)
				.uk-navbar-left.site-logo
					a(href="index.html" class="site-logo__icon uk-navbar-item uk-logo")
						+iconInline('site-logo')
				.uk-navbar-center
					ul.uk-navbar-nav
						li.active: a(href="/") Home
						li: a(href="/") Item
						li: a(href="/") Item
						li: a(href="/") Item
						li: a(href="/") Item
				.uk-navbar-right
					.phone
						//- span(uk-icon='icon:receiver')
						| +7 (000) 000-00-00
			//- ================================
			.herou.header__herou
				h1(class="herou__title")
					| Металлоконструкции на заказ
				hr
				p(class="herou__desc") 
					| Изготовление изделий из металла, любой сложности.
					| Мангалы нестандартных размеров, ограждения для цветников и клумб,
					| Навесы для автомобилей, садовая мебель для дачи и дома и многое другое.
	//- ========================================
	section.section-service
		.service-nav
			.service-nav__list
				each item in serviceNav
					a(href= item.link class="service-nav__item")
						+iconInline(item.slug)
						.service-nav__title= item.title
	//- =======================================
	section.gallery
		.uk-container.gallery__container
			div(class="uk-slideshow uk-position-relative uk-visible-toggle uk-light" uk-slideshow="")
				ul(class="uk-slideshow-items")
					- var n=1;
						while n < 10
							- var count = n++;
							li: img(src="assets/img/rabota/" + count + ".jpg" alt= count class="uk-cover" uk-cover="")
				a(class="uk-position-center-left uk-slidenav-large" href="" uk-slidenav-previous uk-slideshow-item="previous")
				a(class="uk-position-center-right uk-slidenav-large" href="" uk-slidenav-next uk-slideshow-item="next")


						